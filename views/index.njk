{% extends "layouts/base.njk" %}
{% block content %}

  <h1>{{ title }}
  {% if countItems %}
  <span>({{ countItems }})</span>
  {% endif %}
  </h1>

  <div>
  {% for article in articles %}
  <div class="card">
    <div class="card__date">
      {{ article.createdAt }}
    </div>
    <div class="card__title">
      <a href="/view/{{ article._id }}">{{ article.title }}</a>
    </div>
    <div class="card__buttons">
      <a href="/edit/{{ article._id }}">редактировать</a>
      <a href="/delete/{{ article._id }}">удалить</a>
    </div>
  </div>
  {% else %}
  <p>Пока нет материалов</p>
  {% endfor %}
  </div>

  {% include "partials/ad.njk" %}

{% endblock %}
